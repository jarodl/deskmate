<% if @guests.blank? %>
	<p>There are not any students currently in the system.</p>
<% else %>
	<p>These are the current students in our system:</p>
	<ul id="guests">
		<% @guests.each do |c| %>
			<li><%= link_to c.name, {:action => 'show', :id => c.id} -%></li>
		<% end %>
	</ul>
<% end %>
<p><%= link_to "Add new guest", {:action => 'new'} %></p>