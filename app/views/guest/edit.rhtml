<h1>Edit guest:</h1>
<%= error_messages_for :guest %>
<% form_tag :action => 'update', :id => @guest do %>
	<p><label for="guest_name">Name</label>:
		<%= text_field 'guest', 'name' %></p>
	<p><label for="guest_has_form">Has Form</label>:
		<%= select( "guest", "has_form", { "Yes" => "true", "No" => "false"}) %></p>
	<%= submit_tag "Save Changes" %>
<% end %>
<%= link_to 'Back', {:action => 'show', :id => @guest.id} %>
<%= link_to 'View All', {:action => 'list'} %>