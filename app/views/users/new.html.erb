<h1>New user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => 30 %>
  </p>
  <p>
    <%= f.label :user_password, 'Password' %>
    <%= f.password_field :password, :size => 30 %>
  </p>
  <p>
    <%= f.label :user_password_confirmation, 'Confirm' %>
    <%= f.password_field :password_confirmation, :size => 30 %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>
