<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.name %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to image_tag("delete.png"), user, 
    :confirm => 'Are you sure you want to delete this user?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>
