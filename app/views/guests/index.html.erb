<% if @guests.empty? %>
  
  <h1>No guests currently signed in.</h1>

<% else %>

  <h1>Listing guests</h1>

  <table>
    <tr>
      <th>Name</th>
      <th>Form</th>
      <th>Student</th>
      <th>Delete</th>
    </tr>
  
    <% for guest in @guests %>

      <tr class = " <%= cycle("even", "odd") %> " >
        <td><%= link_to guest.name, guest_path(guest) %></td>
        <td><%= guest.has_form %></td>
        <td><%= Student.find_by_id(guest.student_id).name %></td>
        <td><%= link_to image_tag("delete.png"), guest, :confirm => 'Are you sure?',
                                                        :method => :delete %></td>
      </tr>
  
    <% end %>

  </table>
  
<% end %>

<br />

<%= link_to '<input type="submit" value="Add Guest" />', new_guest_path %>
