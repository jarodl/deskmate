<% if @students.blank? %>
	<p>There are not any students currently in the system.</p>
<% else %>
	<h3>Current Students:</h3>
	<table>
		
		<% @students.each do |c| %>
		
			<tr>
				<td><%= link_to c.name, {:action => 'show', :id => c.id} -%></td>
				<td><%= link_to c.student_id, {:action => 'show', :id => c.id}  -%></td>
			</tr>
			
		<% end %>
		
	</table>
	
<% end %>
<p><%= link_to "Add new student", {:action => 'new'} %></p>