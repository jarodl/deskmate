<% form_tag do %>
  
  <p>
    <label for="name">Name</label><br />
    <%= text_field_tag :name, params[:name] %>
  </p>
  
  <p>
    <label for="password">Password</label><br />
    <%= password_field_tag :password, params[:password] %>
  </p>
  
  <p>
    <%= submit_tag "Login" %>
  </p>
  
<% end %>
  