<% if @students.empty? %>
  <h1>No students in the system.</h1>
  
<% else %>

  <h1>Listing students</h1>

  <table>
    <tr>
      <th>Name</th>
      <th>800 #</th>
      <th>Guests</th>
      <th>Room #</th>
      <th>Phone #</th>
    </tr>
  
  <% for student in @students %>
    <tr class = " <%= cycle("even", "odd") %> " >
      <td><%= link_to student.name, student_path(student) %></td>
      <td><%= student.student_id %></td>
      <td><%= student.num_of_guests %></td>
      <td><%= student.room %></td>
      <td><%= student.phone %></td>
    </tr>
  <% end %>

  </table>

  <br />

  <%= link_to '<input type="submit" value="Add Student" />', new_student_path %>

<% end %>