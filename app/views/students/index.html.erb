<% if @students.empty? %>
  
  <h1>No students in the system.</h1>
  
<% else %>

  <table>
    <tr id="header" class="odd">
      <th>Name</th>
      <th>800 #</th>
      <th>Room #</th>
      <th>Phone #</th>
    </tr>
  
  <% for student in @students %>
    <tr class = " <%= cycle("even", "odd") %> " >
      <td><%= link_to student.name, student_path(student) %></td>
      <td><%= student.student_id %></td>
      <td><%= student.room %></td>
      <td><%= student.phone %></td>

    </tr>
    
  <% end %>
  
  </table>

  <br />
  
  <%= will_paginate @students %>
  
<% end %>